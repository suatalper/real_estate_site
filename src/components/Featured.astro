---
const properties = [
  {
    title: 'İstoç Ana Cadde Üzeri Dükkan',
    location: 'İstoç Ticaret Merkezi, 4. Ada',
    price: '12.500.000 ₺',
    image: 'https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=800&q=80',
    features: ['120 m²', '3 Bölüm', 'Kombi'],
    type: 'Satılık'
  },
  {
    title: '2. Katta Ofis Katı',
    location: 'İstoç Plaza Yanı',
    price: '45.000 ₺ / Ay',
    image: 'https://images.unsplash.com/photo-1497366811353-6870744d04b2?auto=format&fit=crop&w=800&q=80',
    features: ['85 m²', '2+1', 'Merkezi'],
    type: 'Kiralık'
  },
  {
    title: 'Köşe Başı Geniş Mağaza',
    location: '24. Ada Köşe Konum',
    price: '28.000.000 ₺',
    image: 'https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&w=800&q=80',
    features: ['250 m²', 'Çift Cephe', 'Depolu'],
    type: 'Satılık'
  }
];
---

<section id="featured" class="py-32 bg-slate-50 relative border-t border-slate-200">
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-5 pointer-events-none"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
            <div>
                <span class="text-secondary font-bold tracking-[0.2em] uppercase text-sm pl-1">Fırsatlar</span>
                <h2 class="text-4xl md:text-5xl font-heading font-medium text-primary mt-3">Öne Çıkan İlanlar</h2>
            </div>
            <a href="#" class="group flex items-center gap-2 text-slate-500 hover:text-primary transition-colors">
                Tümünü Gör
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-hidden opacity-0 translate-y-4 transition-all duration-700">
            {properties.map(property => (
                <div class="bg-white rounded-lg overflow-hidden group flex flex-col h-full hover:-translate-y-2 transition-transform duration-500 shadow-lg shadow-slate-200/50 border border-slate-200 hover:border-secondary/30">
                    <div class="relative h-72 overflow-hidden">
                        <img 
                            src={property.image} 
                            alt={property.title} 
                            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700 opacity-100"
                        >
                        <div class="absolute inset-0 bg-linear-to-t from-black/60 via-transparent to-transparent opacity-60"></div>
                        
                        <div class="absolute top-4 left-4">
                            <span class="bg-slate-900/90 backdrop-blur text-white text-xs font-bold px-3 py-1.5 rounded-md uppercase tracking-wide border border-white/10">
                                {property.type}
                            </span>
                        </div>
                        
                        <div class="absolute bottom-5 left-5 right-5 flex justify-between items-end">
                            <span class="text-2xl font-bold text-white font-heading drop-shadow-md">{property.price}</span>
                        </div>
                    </div>
                    
                    <div class="p-6 flex flex-col grow relative">
                        
                        <h3 class="text-xl font-bold text-primary mb-2 leading-tight group-hover:text-secondary transition-colors">{property.title}</h3>
                        
                        <p class="text-slate-500 flex items-center gap-2 text-sm mb-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                            </svg>
                            {property.location}
                        </p>
                        
                        <div class="flex items-center gap-3 mb-8 mt-auto flex-wrap">
                            {property.features.map(feature => (
                                <span class="text-xs font-bold text-slate-500 bg-slate-100 px-3 py-2 rounded-lg border border-slate-200">
                                    {feature}
                                </span>
                            ))}
                        </div>
                        
                        <a href="/property/1" class="w-full bg-slate-900 text-white font-bold py-4 rounded-lg hover:bg-slate-800 transition-all text-center">
                            İncele
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
