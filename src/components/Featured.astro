---
const properties = [
  {
    title: 'İstoç Ana Cadde Üzeri Dükkan',
    location: 'İstoç Ticaret Merkezi, 4. Ada',
    price: '12.500.000 ₺',
    image: 'https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=800&q=80',
    features: ['120 m²', '3 Bölüm', 'Kombi'],
    type: 'Satılık'
  },
  {
    title: '2. Katta Ofis Katı',
    location: 'İstoç Plaza Yanı',
    price: '45.000 ₺ / Ay',
    image: 'https://images.unsplash.com/photo-1497366811353-6870744d04b2?auto=format&fit=crop&w=800&q=80',
    features: ['85 m²', '2+1', 'Merkezi'],
    type: 'Kiralık'
  },
  {
    title: 'Köşe Başı Geniş Mağaza',
    location: '24. Ada Köşe Konum',
    price: '28.000.000 ₺',
    image: 'https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&w=800&q=80',
    features: ['250 m²', 'Çift Cephe', 'Depolu'],
    type: 'Satılık'
  }
];
---

<section id="featured" class="py-32 bg-gray-100 relative border-t border-gray-200">
    <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-5 pointer-events-none"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6 border-b-4 border-primary pb-4">
            <div>
                <span class="text-primary font-bold tracking-widest uppercase text-sm pl-1">Fırsatlar</span>
                <h2 class="text-4xl md:text-6xl font-heading font-bold text-gray-900 mt-1 uppercase leading-none">Öne Çıkan İlanlar</h2>
            </div>
            <a href="#" class="group flex items-center gap-2 text-gray-600 hover:text-primary transition-colors font-bold uppercase tracking-wider text-sm">
                Tümünü Gör
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-hidden opacity-0 translate-y-4 transition-all duration-700">
            {properties.map(property => (
                <div class="bg-white rounded-none overflow-hidden group flex flex-col h-full hover:-translate-y-1 transition-transform duration-300 shadow-xl shadow-gray-200 border border-gray-200 hover:border-primary/50">
                    <div class="relative h-64 overflow-hidden">
                        <img 
                            src={property.image} 
                            alt={property.title} 
                            class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 opacity-100"
                        >
                        <div class="absolute inset-0 bg-linear-to-t from-black/70 via-transparent to-transparent opacity-80"></div>
                        
                        <div class="absolute top-0 left-0">
                            <span class="bg-primary text-white text-xs font-bold px-4 py-2 rounded-none uppercase tracking-widest">
                                {property.type}
                            </span>
                        </div>
                        
                        <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end">
                            <span class="text-3xl font-bold text-white font-heading drop-shadow-md tracking-tight">{property.price}</span>
                        </div>
                    </div>
                    
                    <div class="p-6 flex flex-col grow relative border-t-4 border-transparent group-hover:border-primary transition-colors duration-300">
                        
                        <h3 class="text-2xl font-bold text-gray-900 mb-3 leading-tight font-heading uppercase group-hover:text-primary transition-colors">{property.title}</h3>
                        
                        <p class="text-gray-500 flex items-center gap-2 text-sm mb-6 font-medium">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                            </svg>
                            {property.location}
                        </p>
                        
                        <div class="flex items-center gap-2 mb-8 mt-auto flex-wrap">
                            {property.features.map(feature => (
                                <span class="text-xs font-bold text-gray-600 bg-gray-100 px-3 py-1 rounded-none border border-gray-300 uppercase">
                                    {feature}
                                </span>
                            ))}
                        </div>
                        
                        <a href="/property/1" class="w-full bg-gray-900 text-white font-bold py-4 rounded-none hover:bg-primary transition-colors text-center uppercase tracking-widest text-sm">
                            İncele
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
