<section id="contact" class="py-24 relative overflow-hidden bg-slate-50 border-t border-slate-200">
    <!-- Abstract Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-5" 
         style="background-image: radial-gradient(#64748b 1px, transparent 1px); background-size: 24px 24px;">
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Unified Card Container -->
        <div class="flex flex-col lg:flex-row rounded-lg overflow-hidden shadow-2xl shadow-slate-200/50 group">
            
            <!-- Info Side - Navy Blue -->
            <div class="lg:w-5/12 p-12 lg:p-16 flex flex-col justify-between relative bg-slate-900 text-white">
                <div class="absolute inset-0 bg-linear-to-b from-slate-800 to-slate-900 opacity-50"></div>
                
                <div class="relative z-10">
                    <h2 class="text-4xl font-heading font-medium mb-6 text-white tracking-tight">
                        Projeleriniz İçin<br>
                        <span class="text-secondary italic">İletişime Geçin</span>
                    </h2>
                    <p class="text-slate-300 mb-12 leading-relaxed text-lg font-light">
                        Size en uygun gayrimenkul çözümleri için uzman ekibimiz bir telefon uzağınızda.
                    </p>
                    
                    <div class="space-y-8">
                        <div class="flex items-start gap-4 group/item">
                            <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center group-hover/item:bg-secondary/20 group-hover/item:border-secondary/30 transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-300 group-hover/item:text-secondary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-white text-lg mb-1">Ofis Adresi</h3>
                                <p class="text-slate-400">İstoç Ticaret Merkezi, No:123<br>Bağcılar, İstanbul</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start gap-4 group/item">
                            <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/10 flex items-center justify-center group-hover/item:bg-secondary/20 group-hover/item:border-secondary/30 transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-300 group-hover/item:text-secondary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-white text-lg mb-1">İletişim Hattı</h3>
                                <p class="text-slate-400 font-mono">+90 212 659 00 00</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="relative z-10 mt-12 pt-12 border-t border-white/10">
                    <p class="text-sm text-slate-500">Pazartesi - Cumartesi <span class="text-slate-300 ml-2">09:00 - 18:00</span></p>
                </div>
            </div>
            
            <!-- Form Side - White -->
            <div class="lg:w-7/12 p-12 lg:p-16 bg-white">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Ad Soyad</label>
                            <input type="text" class="w-full px-5 py-4 rounded-lg border border-slate-200 bg-slate-50 text-slate-900 placeholder-slate-400 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white transition-all outline-none" placeholder="Adınız Soyadınız">
                        </div>
                        <div class="space-y-2">
                            <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Telefon</label>
                            <input type="tel" class="w-full px-5 py-4 rounded-lg border border-slate-200 bg-slate-50 text-slate-900 placeholder-slate-400 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white transition-all outline-none" placeholder="0555 123 4567">
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">E-Posta</label>
                        <input type="email" class="w-full px-5 py-4 rounded-lg border border-slate-200 bg-slate-50 text-slate-900 placeholder-slate-400 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white transition-all outline-none" placeholder="ornek@email.com">
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-slate-500 uppercase tracking-widest pl-1">Mesajınız</label>
                        <textarea rows="4" class="w-full px-5 py-4 rounded-lg border border-slate-200 bg-slate-50 text-slate-900 placeholder-slate-400 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white transition-all outline-none resize-none" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                    </div>
                    
                    <button type="submit" class="w-full bg-secondary hover:bg-amber-700 text-white font-bold py-5 rounded-lg transition-all duration-300 transform hover:-translate-y-1 shadow-lg shadow-amber-600/20 flex items-center justify-center gap-2 group">
                        <span>Mesaj Gönder</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
