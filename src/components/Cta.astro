                        <div class="space-y-2">
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">Telefon</label>
                            <input type="tel" class="w-full px-5 py-4 rounded-xl border border-white/10 bg-white/5 text-white placeholder-gray-600 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white/10 transition-all outline-none" placeholder="0555 123 4567">
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">E-Posta</label>
                        <input type="email" class="w-full px-5 py-4 rounded-xl border border-white/10 bg-white/5 text-white placeholder-gray-600 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white/10 transition-all outline-none" placeholder="ornek@email.com">
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">Mesajınız</label>
                        <textarea rows="4" class="w-full px-5 py-4 rounded-xl border border-white/10 bg-white/5 text-white placeholder-gray-600 focus:border-secondary focus:ring-1 focus:ring-secondary focus:bg-white/10 transition-all outline-none resize-none" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                    </div>
                    
                    <button type="submit" class="w-full bg-secondary hover:bg-secondary/90 text-white font-bold py-5 rounded-xl transition-all duration-300 transform hover:-translate-y-1 shadow-[0_0_20px_rgba(59,130,246,0.3)] flex items-center justify-center gap-2 group">
