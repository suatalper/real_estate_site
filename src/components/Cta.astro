            <div class="lg:w-2/3 p-12 bg-white scroll-hidden opacity-0 translate-y-4 transition-all duration-700 delay-200">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Ad Soyad</label>
                            <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all outline-none bg-gray-50 focus:bg-white" placeholder="İmminiz">
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Telefon</label>
                            <input type="tel" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all outline-none bg-gray-50 focus:bg-white" placeholder="0500 000 0000">
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">E-Posta</label>
                        <input type="email" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all outline-none bg-gray-50 focus:bg-white" placeholder="ornek@email.com">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Mesajınız</label>
                        <textarea rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-secondary focus:ring-2 focus:ring-secondary/20 transition-all outline-none bg-gray-50 focus:bg-white resize-none" placeholder="Size nasıl yardımcı olabiliriz?"></textarea>
                    </div>
                    
                    <button type="submit" class="w-full bg-primary text-white font-bold py-4 rounded-xl hover:bg-primary-light transition-all transform hover:-translate-y-1 shadow-lg shadow-primary/20">
                        Gönder
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>