<section id="contact" class="py-24 relative overflow-hidden bg-gray-100 border-t border-gray-200">
    <!-- Abstract Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-5" 
         style="background-image: radial-gradient(#111827 1px, transparent 1px); background-size: 20px 20px;">
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <!-- Unified Card Container -->
        <div class="flex flex-col lg:flex-row rounded-none overflow-hidden shadow-2xl shadow-gray-400 group">
            
            <!-- Info Side - Brick Red for High Impact -->
            <div class="lg:w-5/12 p-12 lg:p-16 flex flex-col justify-between relative bg-primary text-white">
                <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10 mix-blend-overlay"></div>
                
                <div class="relative z-10">
                    <h2 class="text-4xl font-heading font-bold mb-6 text-white tracking-tighter uppercase leading-none">
                        Projeleriniz İçin<br>
                        <span class="text-black/40">Harekete Geçin</span>
                    </h2>
                    <p class="text-white/80 mb-12 leading-relaxed text-lg font-sans font-medium">
                        Zaman kaybetmeyin. En karlı yatırımlar için uzman ekibimizle hemen görüşün.
                    </p>
                    
                    <div class="space-y-8">
                        <div class="flex items-start gap-4 group/item">
                            <div class="w-12 h-12 rounded-none bg-black/20 flex items-center justify-center border border-white/10 group-hover/item:bg-white group-hover/item:text-primary transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white group-hover/item:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-white text-lg mb-1 uppercase tracking-wide">Ofis Adresi</h3>
                                <p class="text-white/70">İstoç Ticaret Merkezi, No:123<br>Bağcılar, İstanbul</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start gap-4 group/item">
                            <div class="w-12 h-12 rounded-none bg-black/20 flex items-center justify-center border border-white/10 group-hover/item:bg-white group-hover/item:text-primary transition-all duration-300">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white group-hover/item:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-bold text-white text-lg mb-1 uppercase tracking-wide">İletişim Hattı</h3>
                                <p class="text-white/70 font-mono text-lg">+90 212 659 00 00</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="relative z-10 mt-12 pt-12 border-t border-white/10">
                    <p class="text-sm text-white/50 uppercase tracking-widest font-bold">Çalışma Saatleri: <span class="text-white ml-2">09:00 - 18:00</span></p>
                </div>
            </div>
            
            <!-- Form Side - Anthracite for Contrast -->
            <div class="lg:w-7/12 p-12 lg:p-16 bg-gray-900">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">Ad Soyad</label>
                            <input type="text" class="w-full px-5 py-4 rounded-none border-b-2 border-gray-700 bg-gray-800/50 text-white placeholder-gray-600 focus:border-primary focus:bg-gray-800 transition-all outline-none" placeholder="ADINIZ SOYADINIZ">
                        </div>
                        <div class="space-y-2">
                            <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">Telefon</label>
                            <input type="tel" class="w-full px-5 py-4 rounded-none border-b-2 border-gray-700 bg-gray-800/50 text-white placeholder-gray-600 focus:border-primary focus:bg-gray-800 transition-all outline-none" placeholder="0555 123 4567">
                        </div>
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">E-Posta</label>
                        <input type="email" class="w-full px-5 py-4 rounded-none border-b-2 border-gray-700 bg-gray-800/50 text-white placeholder-gray-600 focus:border-primary focus:bg-gray-800 transition-all outline-none" placeholder="ORNEK@EMAIL.COM">
                    </div>
                    
                    <div class="space-y-2">
                        <label class="block text-xs font-bold text-gray-400 uppercase tracking-widest pl-1">Mesajınız</label>
                        <textarea rows="4" class="w-full px-5 py-4 rounded-none border-b-2 border-gray-700 bg-gray-800/50 text-white placeholder-gray-600 focus:border-primary focus:bg-gray-800 transition-all outline-none resize-none" placeholder="MESAJINIZI BURAYA YAZINIZ..."></textarea>
                    </div>
                    
                    <button type="submit" class="w-full bg-white text-gray-900 hover:bg-gray-200 font-bold py-5 rounded-none transition-all duration-300 uppercase tracking-widest flex items-center justify-center gap-2 group mt-4">
                        <span>Gönder</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform group-hover:translate-x-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
