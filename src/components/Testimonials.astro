---
const testimonials = [
  {
    name: 'Ahmet Yılmaz',
    role: 'İşletme Sahibi',
    content: 'İstoç\'taki yeni ofisimiz için aradığımız yeri sayesinde çok hızlı bulduk. Profesyonel yaklaşımınız için teşekkürler.',
    stars: 5
  },
  {
    name: 'Ayşe Demir',
    role: 'Yatırımcı',
    content: 'Ticari gayrimenkul konusundaki uzmanlıkları gerçekten etkileyici. Doğru yönlendirmelerle karlı bir yatırım yaptım.',
    stars: 5
  },
  {
    name: 'Mehmet Kaya',
    role: 'Genel Müdür',
    content: 'Kiralamadan taşınma sürecine kadar her aşamada yanımızda oldular. Güvenilir ve çözüm odaklı bir ekip.',
    stars: 5
  }
];
---

<section id="testimonials" class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span class="text-secondary font-bold tracking-wider uppercase text-sm">Referanslar</span>
            <h2 class="text-3xl md:text-5xl font-heading font-bold text-primary mt-2 mb-4">Mutlu Müşterilerimiz</h2>
            <p class="text-text-muted max-w-2xl mx-auto text-lg">Bizi tercih eden müşterilerimizin deneyimleri.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-hidden opacity-0 translate-y-4 transition-all duration-700">
            {testimonials.map(testimonial => (
                <div class="bg-gray-50 p-8 rounded-2xl border border-gray-100 shadow-sm hover:shadow-md transition-shadow duration-300">
                    <div class="flex gap-1 mb-4 text-accent">
                        {[...Array(testimonial.stars)].map(() => (
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>
                    <p class="text-gray-600 mb-6 italic min-h-[80px]">"{testimonial.content}"</p>
                    <div class="flex items-center gap-4 border-t border-gray-200 pt-6">
                        <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold">
                            {testimonial.name.charAt(0)}
                        </div>
                        <div>
                            <h4 class="font-bold text-primary">{testimonial.name}</h4>
                            <p class="text-sm text-gray-500">{testimonial.role}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
