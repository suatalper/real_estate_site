---
const testimonials = [
  {
    name: "Ahmet Yılmaz",
    title: "Yatırımcı",
    review: "İstoç'taki dükkan arayışımızda profesyonel yaklaşımları ve doğru yönlendirmeleri ile bize tam istediğimiz yeri buldular. Kesinlikle tavsiye ederim.",
    stars: 5
  },
  {
    name: "Ayşe Kaya",
    title: "İşletme Sahibi",
    review: "Kiralama sürecinde gösterdikleri ilgi ve alaka mükemmeldi. Şeffaf ve hızlı bir süreç yönettiler. Teşekkürler!",
    stars: 5
  },
  {
    name: "Mehmet Demir",
    title: "Girişimci",
    review: "Ticari gayrimenkul konusundaki uzmanlıkları sayesinde ofisimi çok kısa sürede ve değerinde satın aldım. Güvenilir bir ekip.",
    stars: 5
  }
];
---

<section class="py-24 bg-slate-50 border-t border-slate-200 relative overflow-hidden">
     <!-- Abstract Background Pattern -->
    <div class="absolute inset-0 z-0 opacity-5" 
         style="background-image: radial-gradient(#64748b 1px, transparent 1px); background-size: 24px 24px;">
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="text-center mb-16 scroll-hidden opacity-0 translate-y-4 transition-all duration-700">
            <span class="text-secondary font-bold tracking-[0.2em] uppercase text-sm">Müşteri Yorumları</span>
            <h2 class="text-3xl md:text-5xl font-heading font-medium text-primary mt-2">Mutlu Müşterilerimiz</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-hidden opacity-0 translate-y-4 transition-all duration-700 delay-100">
            {testimonials.map((testimonial, index) => (
                <div class="bg-white border border-slate-100 p-8 rounded-lg hover:border-secondary/30 transition-all duration-300 group hover:-translate-y-1 shadow-lg shadow-slate-200/50 hover:shadow-xl hover:shadow-secondary/10">
                    <div class="flex gap-1 mb-6">
                        {[...Array(testimonial.stars)].map(() => (
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>
                    <p class="text-slate-600 italic mb-8 leading-relaxed">"{testimonial.review}"</p>
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-slate-100 flex items-center justify-center text-primary font-bold text-lg border border-slate-200">
                            {testimonial.name.charAt(0)}
                        </div>
                        <div>
                            <h4 class="text-primary font-bold">{testimonial.name}</h4>
                            <span class="text-slate-500 text-sm">{testimonial.title}</span>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
