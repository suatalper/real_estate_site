---
import Layout from '../../layouts/Layouts.astro';

export function getStaticPaths() {
  return [
    {params: {id: '1'}},
    {params: {id: '2'}},
    {params: {id: '3'}},
  ];
}

const { id } = Astro.params;

// Mock data - in a real app this would come from a CMS or DB
const property = {
  title: 'İstoç Ana Cadde Üzeri Dükkan',
  location: 'İstoç Ticaret Merkezi, 4. Ada, Bağcılar/İstanbul',
  price: '12.500.000 ₺',
  description: 'İstoçun en işlek caddelerinden birinde, yüksek tabela değeri olan, kurumsal kiracılı (opsiyonel) satılık dükkan. 3 bölümden oluşmaktadır: Giriş kat, asma kat ve depo.',
  images: [
    'https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&w=1200&q=80',
    'https://images.unsplash.com/photo-1497366811353-6870744d04b2?auto=format&fit=crop&w=1200&q=80',
    'https://images.unsplash.com/photo-1542838132-92c53300491e?auto=format&fit=crop&w=1200&q=80',
  ],
  features: [
    { label: 'Metrekare', value: '120 m²' },
    { label: 'Bölüm Sayısı', value: '3' },
    { label: 'Isıtma', value: 'Kombi' },
    { label: 'Yapı Tipi', value: 'Betonarme' },
    { label: 'Kullanım Durumu', value: 'Boş' },
    { label: 'Tapu Durumu', value: 'Kat Mülkiyetli' },
  ],
  agent: {
    name: 'Ahmet Yılmaz',
    phone: '+90 555 123 4567',
    image: 'https://images.unsplash.com/photo-1560250097-0b93528c311a?auto=format&fit=crop&w=200&q=80'
  }
};
---

<Layout title={`${property.title} | Site Emlak`}>
  <div class="bg-gray-50 min-h-screen pb-20">
    <!-- Gallery Section -->
    <div class="relative h-[60vh] bg-black">
      <img src={property.images[0]} alt={property.title} class="w-full h-full object-cover opacity-90" />
      <div class="absolute bottom-0 left-0 w-full bg-linear-to-t from-black/80 to-transparent p-8">
        <div class="max-w-7xl mx-auto">
          <h1 class="text-3xl md:text-5xl font-heading font-bold text-white mb-2">{property.title}</h1>
          <p class="text-gray-300 text-lg flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
            {property.location}
          </p>
        </div>
      </div>
    </div>

    <!-- Content Grid -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-10">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-10">
          
          <!-- Price & Quick Info -->
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 flex flex-wrap justify-between items-center gap-4">
            <div>
              <span class="block text-gray-500 text-sm font-bold uppercase tracking-wider mb-1">Satış Fiyatı</span>
              <span class="text-4xl font-bold text-primary">{property.price}</span>
            </div>
            <div class="flex gap-4">
              <button class="flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg transition-colors font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                </svg>
                Paylaş
              </button>
              <button class="flex items-center gap-2 bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-lg transition-colors font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Kaydet
              </button>
            </div>
          </div>

          <!-- Description -->
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
            <h2 class="text-2xl font-bold text-primary mb-6">Açıklama</h2>
            <p class="text-gray-600 leading-relaxed text-lg">
              {property.description}
            </p>
          </div>

          <!-- Features -->
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
            <h2 class="text-2xl font-bold text-primary mb-6">Özellikler</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
              {property.features.map(feature => (
                <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                  <span class="block text-gray-400 text-xs font-bold uppercase mb-1">{feature.label}</span>
                  <span class="block text-primary font-bold text-lg">{feature.value}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-2xl p-8 shadow-xl border border-gray-100 sticky top-24">
            <h3 class="text-xl font-bold text-primary mb-6">İletişim</h3>
            
            <div class="flex items-center gap-4 mb-8">
              <img src={property.agent.image} alt={property.agent.name} class="w-16 h-16 rounded-full object-cover border-2 border-secondary" />
              <div>
                <div class="font-bold text-lg text-primary">{property.agent.name}</div>
                <div class="text-secondary text-sm font-medium">Gayrimenkul Danışmanı</div>
              </div>
            </div>
            
            <button class="w-full bg-primary text-white font-bold py-4 rounded-xl hover:bg-primary-light transition-all mb-4 flex items-center justify-center gap-2 shadow-lg shadow-primary/20">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {property.agent.phone}
            </button>
            <button class="w-full bg-white text-primary border-2 border-primary font-bold py-4 rounded-xl hover:bg-gray-50 transition-all flex items-center justify-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Mesaj Gönder
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
